<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">

        <com.zeus.migue.notes.ui.shared.InputField
            android:id="@+id/account_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_my_money_dialog_placeholder_account_name"
                android:inputType="textShortMessage|textCapWords"
                android:maxLines="1"
                android:singleLine="true" />
        </com.zeus.migue.notes.ui.shared.InputField>

        <com.zeus.migue.notes.ui.shared.InputField
            android:id="@+id/account_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/fragment_my_money_dialog_placeholder_account_value"
                android:inputType="number"
                android:maxLines="1"
                android:singleLine="true" />
        </com.zeus.migue.notes.ui.shared.InputField>

    </LinearLayout>
</LinearLayout>