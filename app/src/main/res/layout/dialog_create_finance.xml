<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:orientation="vertical">

    <com.example.miguel.misnotas.InputField
        android:id="@+id/finance_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_my_money_dialog_placeholder_resource_name"
            android:inputType="textShortMessage|textCapWords"
            android:maxLines="1"
            android:singleLine="true" />
    </com.example.miguel.misnotas.InputField>

    <com.example.miguel.misnotas.InputField
        android:id="@+id/finance_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/fragment_my_money_dialog_placeholder_resource_value"
            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true" />
    </com.example.miguel.misnotas.InputField>

</LinearLayout>