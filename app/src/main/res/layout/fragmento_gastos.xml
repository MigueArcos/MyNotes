<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView_productos"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Lunes"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edlunes"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Martes"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edmartes"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Miércoles"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edmiercoles"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout3">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Jueves"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edjueves"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout4">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Viernes"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edviernes"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayouttot"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout5">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="left"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="6"
                    android:text="Total"/>
                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="30dp"
                    android:gravity="left"
                    android:layout_weight="4"
                    android:text="$ 0"/>
            </LinearLayout>
            <Button
                android:id="@+id/boton"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Borrar todo"
                android:layout_below="@+id/linearLayouttot"
                android:layout_centerHorizontal="true" />
            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/boton">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Sábado"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/edsabado"
                    android:layout_weight="2.5"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/linearLayout6">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:layout_weight="6.5"
                    android:text="Domingo"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:text="$"/>
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:inputType="number"
                    android:ems="10"
                    android:maxLength="4"
                    android:id="@+id/eddomingo"
                    android:layout_weight="2.5"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>